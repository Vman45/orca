{
  "name": "opex-controller",
  "version": "1.0.0",
  "description": "The standalone controller for the Opex System",
  "author": {
    "name": "Mike S.",
    "email": "",
    "url": "https://mikesfishtank.com"
  },
  "license": "MIT",
  "scripts": {
    "start:dev": "concurrently --kill-others-on-fail \"yarn run dev:server\" \"nodemon server.js\"",
    "dev:server": "webpack-dev-server --mode development --open",
    "build:dev": "webpack --mode development",
    "build": "webpack --mode production",
    "client": "cd client && yarn start",
    "server": "nodemon server.js",
    "dev": "concurrently --kill-others-on-fail \"yarn server\" \"yarn client\""
  },
  "dependencies": {
    "babel": "^6.23.0",
    "express": "^4.16.3",
    "html-webpack-plugin": "^3.2.0",
    "react": "^16.3.2",
    "react-dom": "^16.3.2"
  },
  "devDependencies": {
    "babel-core": "^6.26.3",
    "babel-loader": "^7.1.4",
    "babel-plugin-react-svg": "^2.1.0",
    "babel-polyfill": "^6.26.0",
    "babel-preset-env": "^1.7.0",
    "babel-preset-es2015": "^6.24.1",
    "babel-preset-react": "^6.24.1",
    "babel-preset-stage-0": "^6.24.1",
    "concurrently": "^3.5.1",
    "css-loader": "^0.28.11",
    "file-loader": "^1.1.11",
    "style-loader": "^0.21.0",
    "webpack": "^4.8.3",
    "webpack-cli": "^2.1.3",
    "webpack-dev-server": "^3.1.4"
  },
  "proxy": "http://localhost:3000/",
  "repository": {
    "type": "git",
    "url": "https://github.com/bhcmoney/opex.git"
  },
  "bugs": {
    "url": "https://github.com/bhcmoney/opex/issues"
  },
  "keywords": [
    "node",
    "express",
    "react", 
    "aquarium",
    "raspberry-pi"
  ]
}
